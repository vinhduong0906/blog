<%if obj.errors.any? %>
  <div class="row alert alert-danger" role="alert">
    <h5 class="panel-title">The following errors prevented the <%=obj.class.name.downcase %> from being saved</h5>
    <div class="panel-body"
      <ul>  
        <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>  
      </ul>
    </div>
  </div>
<% end %>

