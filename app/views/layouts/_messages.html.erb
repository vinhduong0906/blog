<% if flash[:notice] %>
    <div class="notice container alert alert-success ">
    <%= flash[:notice].html_safe %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% end %>
    <% if flash[:warning] %>
    <div class="notice container alert alert-danger ">
    <%= flash[:warning].html_safe %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% end %>