<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10 mt-4"> 
      <%= render "layouts/errors", obj: @user %>
      
      <%= form_with(model: @user, local: true, :class=>"form-group row bg-info ") do |form| %>
          
          <div class="col-sm-2 col-form-label">
            <%= form.label :username %>
          </div>
          <div class="col-sm-10 ">
            <%= form.text_field :username, :class=>"form-control" %>
          </div>
          <div class="col-sm-2 col-form-label">
            <%= form.label :image %>
          </div>
          <div class="col-sm-10 ">
            <%= form.file_field :image %>
          </div>  
          <div class="col-sm-2 col-form-label">
            <%= form.label :email %>    
          </div>      
          <div class="col-sm-10 ">
            <%= form.text_field :email, :class=>"form-control" %>
          </div>  
          <div class="col-sm-2 col-form-label">
            <%= form.label :password %>    
          </div>      
          <div class="col-sm-10 ">
            <%= form.password_field :password_digest, :class=>"form-control" %>
          </div> 
          <%= form.submit "Sign up", :class=>" btn btn-primary mb-2 center btn-outline-white" %>      
      <% end %>
    </div>
  </div>
</div>        
<div class="mb-3 text-center">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
